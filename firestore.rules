rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // Helper Functions
    // ========================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasRole(role) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isHotelStaff(hotelId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['hotel_staff', 'admin'] &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.hotelId == hotelId;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    // Field validation helpers
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    function isValidBookingStatus(status) {
      return status in ['pending', 'confirmed', 'in_progress', 'completed', 'cancelled', 'no_show'];
    }

    function isValidSessionStatus(status) {
      return status in ['preparing', 'checked_in', 'active', 'paused', 'completed', 'emergency'];
    }

    // ========================================
    // Users Collection
    // ========================================
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) &&
        hasRequiredFields(['email', 'role']) &&
        request.resource.data.role in ['parent', 'sitter', 'hotel_staff'];
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // ========================================
    // Hotels Collection
    // ========================================
    match /hotels/{hotelId} {
      allow read: if isSignedIn();
      allow write: if isHotelStaff(hotelId) || isAdmin();
    }

    // ========================================
    // Bookings Collection
    // ========================================
    match /bookings/{bookingId} {
      allow read: if isSignedIn() && (
        resource.data.parentId == request.auth.uid ||
        resource.data.sitterId == request.auth.uid ||
        isHotelStaff(resource.data.hotelId) ||
        isAdmin()
      );
      allow create: if isSignedIn() && (
        request.resource.data.parentId == request.auth.uid ||
        isHotelStaff(request.resource.data.hotelId) ||
        isAdmin()
      ) &&
        hasRequiredFields(['hotelId', 'parentId', 'status', 'schedule', 'children']) &&
        isValidBookingStatus(request.resource.data.status);
      allow update: if isSignedIn() && (
        resource.data.parentId == request.auth.uid ||
        resource.data.sitterId == request.auth.uid ||
        isHotelStaff(resource.data.hotelId) ||
        isAdmin()
      ) &&
        isValidBookingStatus(request.resource.data.status);
      allow delete: if isAdmin();
    }

    // ========================================
    // Sessions Collection
    // ========================================
    match /sessions/{sessionId} {
      allow read: if isSignedIn() && (
        resource.data.parentId == request.auth.uid ||
        resource.data.sitterId == request.auth.uid ||
        isHotelStaff(resource.data.hotelId) ||
        isAdmin()
      );
      allow create: if isSignedIn() && (
        request.resource.data.sitterId == request.auth.uid ||
        isHotelStaff(request.resource.data.hotelId) ||
        isAdmin()
      ) &&
        hasRequiredFields(['bookingId', 'hotelId', 'sitterId', 'parentId', 'status']) &&
        isValidSessionStatus(request.resource.data.status);
      allow update: if isSignedIn() && (
        resource.data.sitterId == request.auth.uid ||
        resource.data.parentId == request.auth.uid ||
        isHotelStaff(resource.data.hotelId) ||
        isAdmin()
      ) &&
        isValidSessionStatus(request.resource.data.status);
      allow delete: if isAdmin();
    }

    // ========================================
    // Children Collection
    // ========================================
    match /children/{childId} {
      allow read: if isSignedIn() && (
        resource.data.parentId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isSignedIn() &&
        request.resource.data.parentId == request.auth.uid &&
        hasRequiredFields(['parentId', 'firstName', 'age']);
      allow update: if isSignedIn() && resource.data.parentId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.parentId == request.auth.uid;
    }

    // ========================================
    // Activity Logs Collection
    // ========================================
    match /activityLogs/{logId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (
        hasRole('sitter') || isAdmin()
      ) &&
        hasRequiredFields(['sessionId', 'type', 'description']) &&
        request.resource.data.type in ['check_in', 'activity', 'meal', 'nap', 'diaper', 'note', 'photo', 'emergency', 'check_out'];
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ========================================
    // Notifications Collection
    // ========================================
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Only Cloud Functions or admin can create notifications
      allow create: if false;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid &&
        // Only allow marking as read
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // ========================================
    // Incidents Collection
    // ========================================
    match /incidents/{incidentId} {
      allow read: if isSignedIn() && (
        resource.data.parentId == request.auth.uid ||
        resource.data.sitterId == request.auth.uid ||
        isHotelStaff(resource.data.hotelId) ||
        isAdmin()
      );
      allow create: if isSignedIn() && (
        hasRole('sitter') ||
        isHotelStaff(request.resource.data.hotelId) ||
        isAdmin()
      ) &&
        hasRequiredFields(['hotelId', 'severity', 'category', 'report']);
      allow update: if isSignedIn() && (
        resource.data.sitterId == request.auth.uid ||
        isHotelStaff(resource.data.hotelId) ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }

    // ========================================
    // Reviews Collection
    // ========================================
    match /reviews/{reviewId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && hasRole('parent') &&
        hasRequiredFields(['sitterId', 'rating']) &&
        request.resource.data.rating >= 1 &&
        request.resource.data.rating <= 5;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ========================================
    // Sitters Collection
    // ========================================
    match /sitters/{sitterId} {
      allow read: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }

    // ========================================
    // Conversations Collection (Messaging)
    // ========================================
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow delete: if isAdmin();

      // Messages sub-collection
      match /messages/{messageId} {
        allow read: if isSignedIn() &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if isSignedIn() &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isAdmin();
      }
    }
  }
}
